<Window x:Class="Kingdom_Conqueror.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kingdom_Conqueror"
        mc:Ignorable="d"
        Title="Kingdom Conqueror" Height="350" Width="525">
    <Grid>
        <Image x:Name="Background" HorizontalAlignment="Left" Height="320" VerticalAlignment="Top" Width="517" Stretch="UniformToFill">
            <Image.Source>
                <BitmapImage UriSource="/CharacterSprites/background-hills.png"/>
            </Image.Source>
        </Image>
        <Image x:Name="Archer" HorizontalAlignment="Left" Height="100" Margin="39,143,0,0" VerticalAlignment="Top" Width="100">
            <Image.Source>
                <BitmapImage UriSource="/CharacterSprites/Archer/Stand/0.png"/>
            </Image.Source>
        </Image>
        <Image x:Name="Warrior" HorizontalAlignment="Left" Height="100" Margin="199,143,0,0" VerticalAlignment="Top" Width="100">
            <Image.Source>
                <BitmapImage UriSource="/CharacterSprites/Knight/Stand/0.png"/>
            </Image.Source>
        </Image>
        <Image x:Name="Wizard" HorizontalAlignment="Left" Height="100" Margin="382,143,0,0" VerticalAlignment="Top" Width="100">
            <Image.Source>
                <BitmapImage UriSource="/CharacterSprites/IceWizard/Stand/0.png"/>
            </Image.Source>
        </Image>

    </Grid>
</Window>
